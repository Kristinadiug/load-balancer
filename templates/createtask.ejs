<!DOCTYPE html>
<html lang="en">
<head>
<% include head_include %>
</head>
<body>
<%- include(header) %>

<div class="container create-task">
  <div class="create-task-form">
    <h2>Let's start!</h2>
      <input type="number" name="number" id="number_for_task" value="100"  min="100" max="6000" required>
      <button onclick="createtask()">Create Task</button>
  </div>
</div>


  <script>
    function createtask()
    {
      if($('#number_for_task').val()<100 || $('#number_for_task').val()>6000 || $('#number_for_task').val()%100!=0) alert("Input must be between 100 and 6000! And be divisible by 100!");
        else{
          $.ajax({
          url:"/createtask",
          method:"POST",
          data:{
            number:   $('#number_for_task').val()
          },
          success:function(response) {
            location.href = "/info"
          },
         error:function(){
          alert("error");
         }
        });
      }
  }
  </script>

  <script src="https://code.jquery.com/jquery-3.3.1.min.js" ></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
